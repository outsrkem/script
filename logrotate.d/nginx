/usr/local/nginx/logs/access.log
/usr/local/nginx/logs/error.log
{
    daily
    minsize 10M
    maxsize 1G
    missingok
    rotate 14
    compress
    delaycompress
    dateext
    dateformat -%Y%m%d-%s
    notifempty
    create 0640 nginx nginx
    sharedscripts
    postrotate
        if [ -f /usr/local/nginx/run/nginx.pid ]; then
              /usr/bin/kill -SIGUSR1 `cat /usr/local/nginx/run/nginx.pid`
              /usr/bin/chmod 440 /usr/local/nginx/logs/*.log-*
        fi
    endscript
}

