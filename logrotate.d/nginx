/usr/local/nginx/logs/access.log
/usr/local/nginx/logs/error.log
{
    daily
    minsize 5K
    maxsize 10M
    missingok
    rotate 14
    compress
    delaycompress
    dateext
    dateformat -%Y%m%d-%s
    notifempty
    create 0600 nginx nginx
    sharedscripts
    postrotate
        if [ -f /usr/local/nginx/logs/nginx.pid ]; then
              /usr/bin/kill -USR1 `cat /usr/local/nginx/logs/nginx.pid`
              /usr/bin/chmod 400 /usr/local/nginx/logs/*.log-*
        fi
    endscript
}

